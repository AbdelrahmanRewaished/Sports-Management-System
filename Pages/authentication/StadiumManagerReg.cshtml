@page
@model Sports_Management_System.Pages.authentication.StadiumManagerRegModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by Colorlib</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/css/SmReg.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label asp-for="registeringStadiumManager.Name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="registeringStadiumManager.Name"  id="name" placeholder="Your Name" />
                            </div>
                            <div class="form-group">
                                <label asp-for="registeringStadiumManager.Username"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="registeringStadiumManager.Username"  id="email" placeholder="Your Username" />
                            </div>
                            <div class="form-group">
                                <label asp-for="registeringStadiumManager.Entity"><i class="zmdi zmdi-gamepad"></i></label>
                                <input asp-for="registeringStadiumManager.Entity" id="stadium" placeholder="Your stadium" />
                                @if (Model.errorMessage.Equals("Stadium doesn't exist"))
                                {
                                    <br />
                                    <h6 style="color:red"> @Model.errorMessage</h6>
                                }
                            </div>
                            <div class="form-group">
                                <label asp-for="registeringStadiumManager.Password"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="registeringStadiumManager.Password" type="password" id="pass" placeholder="Password" />
                            </div>
                            <div class="form-group">
                                <label asp-for="registeringStadiumManager.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input asp-for="registeringStadiumManager.ConfirmPassword" type="password" id="re_pass" placeholder="Repeat your password" />
                                @if (Model.errorMessage.Equals("Passwords must match"))
                                {
                                    <br />
                                    <h6 style="color:red"> @Model.errorMessage</h6>
                                } 
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                                @if (Model.errorMessage.Equals("Already registered"))
                                {
                                    <br />
                                    <h6 style="color:red"> @Model.errorMessage</h6>
                                }
                                @if (Model.errorMessage.Equals("A Stadium Manager already exists "))
                                {
                                    <br />
                                    <h6 style="color:red"> @Model.errorMessage</h6>
                                }
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <a href="#" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>


    </div>

    <!-- JS -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>