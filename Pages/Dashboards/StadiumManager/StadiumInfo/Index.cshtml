@page
@model Sports_Management_System.Pages.Dashboards.StadiumManager.StadiumInfo.IndexModel
@{
    Layout = "~/Pages/Shared/_StadiumManagerLayout.cshtml";
}
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Stadium Info</h2>
    </div>
    <br />
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            <table class="table table-striped border">
                <tr class="table table-secondary">
                    <th>
                        <label asp-for="Stadium.Name">Stadium Name</label>
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Stadium.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Stadium.Capacity)
                    </th>
                </tr>

                <tr>
                    <td>
                        @Html.DisplayFor(m => Model.Stadium.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => Model.Stadium.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(m => Model.Stadium.Capacity)
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Pending Requests</h2>
    </div>
    <div class="col-12 border p-3">
        <table id="RequestsTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Host Club</th>
                    <th>Guest Club</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/stadiumManager/pendingRequests.js"></script>
}