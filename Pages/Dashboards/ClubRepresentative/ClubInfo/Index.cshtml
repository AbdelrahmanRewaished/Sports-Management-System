@page
@model Sports_Management_System.Pages.Dashboards.ClubRepresentative.ClubInfo.IndexModel
@{
    Layout = "~/Pages/Shared/_ClubRepLayout.cshtml";

}
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Club Info</h2>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            <table class="table table-striped border">
                <tr class="table table-secondary">
                    <th>
                        <label asp-for="Club.Name">Club Name</label>
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Club.Location)
                    </th>

                </tr>
               
                <tr>
                    <td>
                        @Html.DisplayFor(m => Model.Club.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => Model.Club.Location)
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Upcoming Matches</h2>
    </div>
    <br />
    <br />
    <br />
    <div class="col-12 border p-3">
        <table id="MatchesTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Host Club</th>
                    <th>Guest Club</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/clubRepresentative/upComingMatches.js"></script>
}