@page
@model Sports_Management_System.Pages.Dashboards.SystemAdminDashboard.StadiumsList.CreateModel
@{
}

<br />

<h2 class="text-info">Create New Stadium</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"> </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Stadium.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Stadium.Name" class="form-control" required />
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Stadium.Location"></label>
            </div>
            <div class="col-6">
                <input asp-for="Stadium.Location" class="form-control" required />
            </div>
        </div>
        <input asp-for="Stadium.Status" type="hidden"/>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Stadium.Capacity"></label>
            </div>
            <div class="col-6">
                <input asp-for="Stadium.Capacity" class="form-control" required />
            </div>
        </div>
        
        
        <br />
        <br />
        <div class="form-group row">
            <div class="col-3 offset-2">
                <input type="submit" value="Create" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>