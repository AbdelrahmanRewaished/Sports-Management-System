@page
@model Sports_Management_System.Pages.Dashboards.SystemAdmin.StadiumsList.IndexModel
@{
    Layout = "~/Pages/Shared/_SysAdminLayout.cshtml";
}

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Stadiums List</h2>
    </div>
    <br />
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-check-control text-white btn-lg">Create New Stadium</a>
    </div>
    <br />
    <br />
    <br />
    <div class="col-12 border p-3">

        <table id="StadiumsTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Capacity</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/systemAdmin/stadiums.js"></script>
}
