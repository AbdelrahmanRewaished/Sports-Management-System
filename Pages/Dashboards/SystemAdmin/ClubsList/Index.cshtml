@page
@model Sports_Management_System.Pages.Dashboards.SystemAdmin.ClubsList.IndexModel
@{
    Layout = "~/Pages/Shared/_SysAdminLayout.cshtml";
}

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Clubs List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-check-control text-white">Create New Club</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Clubs.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table table-secondary">
                        <th>
                            <label asp-for="Clubs.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Clubs.FirstOrDefault().Location)
                        </th>

                    </tr>
                    @foreach (var item in Model.Clubs)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Location)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-Id="@item.ClubId" onclick="return confirm('Are you Sure you want to delete ?')" class="btn btn-danger btn-secondary">Delete</button>
                                <a asp-page="Edit" asp-route-Id="@item.ClubId" class="btn btn-success btn-secondary">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Clubs Available.</p>
            }
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/bookList.js"></script>
}