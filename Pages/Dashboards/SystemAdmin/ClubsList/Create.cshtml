@page
@model Sports_Management_System.Pages.Dashboards.SystemAdmin.ClubsList.CreateModel
@{
}

<br />

<h2 style="margin-left:50px;" class="text-info">Create New Club</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"> </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Club.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Club.Name" class="form-control" required />
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Club.Location"></label>
            </div>
            <div class="col-6">
                <input asp-for="Club.Location" class="form-control" required />
            </div>
        </div>
        
        
        <br />
        <br />
        <div style="margin-left:160px;" class="form-group row">
            <div class="col-3 offset-2">
                <input type="submit" value="Create" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>