@page
@model Sports_Management_System.Pages.Dashboards.SystemAdmin.IndexModel
@{
    Layout = "~/Pages/Shared/_SysAdminLayout.cshtml";
}
<div class="dash-content">
        <div class="overview">
            <div class="title">
                <i class="uil uil-tachometer-fast-alt"></i>
                <span class="text">Dashboard</span>
            </div>

            <div class="boxes">
                <div class="box box1">
                    <i style="margin-right: 5px;"><img src="~/lib/images/club.png"></i>
                    <span class="text">Total Clubs</span>
                    <span class="number">@Model.ClubsCount</span>
                </div>
                <div class="box box2">
                    <i style="margin-right: 5px;"><img src="~/lib/images/stadium.png"></i>
                    <span class="text">Total Stadiums</span>
                    <span class="number">@Model.StadiumsCount</span>
                </div>
                <div class="box box3">
                    <i style="margin-right: 5px;"><img src="~/lib/images/fan.png"></i>
                    <span class="text">Total Fans</span>
                    <span class="number">@Model.FansCount</span>
                </div>
            </div>
        </div>
</div>


    
