@page
@model Sports_Management_System.Pages.Dashboards.Fan.IndexModel
@{
    Layout = "~/Pages/Shared/_FanLayout.cshtml";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Dashboard</span>
        </div>

        <div class="boxes">
            <div class="box box1">
                <i style="margin-right: 5px;"><img src="~/lib/images/club.png"> x <img src="~/lib/images/club.png"></i>
                <span class="text">Upcoming Matches</span>
                <span class="number">@Model.AvailableMatchesCount</span>
            </div>
            <div class="box box2">
                <i style="margin-right: 5px;"><img src="~/lib/images/stadium.png"></i>
                <span class="text">Matches to be Attended</span>
                <span class="number">20,120</span>
            </div>
            <div class="box box3">
                <i style="margin-right: 5px;"><img src="~/lib/images/stadium.png"></i>
                <span class="text">Totally Purchased Tickets</span>
                <span class="number">@Model.TotalPurchasedTickets</span>
            </div>
        </div>
    </div>
</div>
