@page
@model Sports_Management_System.Pages.Dashboards.AssociationManager.MatchList.IndexModel
@{
    Layout = "~/Pages/Shared/_AssocManagerLayout.cshtml";

}
<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Matches List</h2>
    </div>
    <br />
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-check-control text-white btn-lg">Create New Match</a>
    </div>
    <br />
    <br />
    <br />
    <div class="col-12 border p-3">
        <table id="MatchesTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Host Club</th>
                    <th>Guest Club</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/associationManager/matches.js"></script>
}