@page
@model Sports_Management_System.Pages.Auth.ClubRepRegModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sports Management System</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/css/registration.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label asp-for="registeringRepresentative.Name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="registeringRepresentative.Name"  id="name" placeholder="Your Name" required/>
                            </div>
                            <div class="form-group">
                                <label asp-for="registeringRepresentative.Username"><i class="zmdi zmdi-email"></i></label>
                                <input asp-for="registeringRepresentative.Username" id="email" placeholder="Your Username" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="registeringRepresentative.Entity"><i class="zmdi zmdi-gamepad"></i></label>
                                <input asp-for="registeringRepresentative.Entity" id="Club" placeholder="Your Club" required />
                                
                            </div>
                            <div class="form-group">
                                <label asp-for="registeringRepresentative.Password"><i class="zmdi zmdi-lock"></i></label>
                                <input asp-for="registeringRepresentative.Password" type="password" id="pass" placeholder="Password" />
                            </div>
                            <div class="form-group">
                                <label asp-for="registeringRepresentative.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input asp-for="registeringRepresentative.ConfirmPassword" required type="password" id="re_pass" placeholder="Repeat your password" />
                                
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" required />
                                
                            </div>
                            <br />
                            <p style="color:red"> @Model.errorMessage</p>
                        </form>
                    </div>
                </div>
            </div>
        </section>


    </div>

    <!-- JS -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>